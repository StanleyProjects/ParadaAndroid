<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:clickable="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimaryDark"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/toolbar_icon"
            android:layout_height="@dimen/toolbar_icon"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/toolbar_icon_padding"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_back"
            android:tint="@color/white"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:paddingLeft="56dp"
            android:paddingRight="56dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"/>
    </FrameLayout>

    <ScrollView
        android:id="@+id/content"
        android:scrollbars="none"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@id/image"
                android:background="@color/colorPrimaryDark"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="222dp"/>
            <TextView
                android:id="@+id/descr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"/>
            <TextView
                android:id="@+id/subscribe_reception"
                android:layout_width="228dp"
                android:layout_height="@dimen/container_height_medium"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:background="@drawable/accent_round"
                android:gravity="center"
                android:text="@string/subscribe_reception"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"/>
            <TextView
                android:id="@+id/order_call"
                android:layout_width="228dp"
                android:layout_height="@dimen/container_height_medium"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:background="@drawable/accent_border"
                android:gravity="center"
                android:text="@string/order_call"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_medium"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>