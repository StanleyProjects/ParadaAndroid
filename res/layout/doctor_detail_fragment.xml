<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">
        <ImageView
            android:id="@+id/back"
            android:src="@mipmap/icon_back"
            android:scaleType="fitCenter"
            android:padding="16dp"
            android:tint="@color/white"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <TextView
            android:id="@+id/doctor_fullname"
            android:gravity="center"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/white"
            android:paddingLeft="56dp"
            android:paddingRight="56dp"
            android:singleLine="true"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="148dp">
                <FrameLayout
                    android:layout_marginRight="8dp"
                    android:layout_width="148dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/photo"
                        android:src="@drawable/photo_placeholder"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center_vertical|right"
                        android:layout_width="128dp"
                        android:layout_height="128dp"/>
                    <ImageView
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/photo_mask"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical|right"
                        android:layout_width="128dp"
                        android:layout_height="128dp"/>
                    <ImageView
                        android:id="@+id/phone"
                        android:src="@drawable/btn_phone"
                        android:scaleType="fitCenter"
                        android:padding="6dp"
                        android:layout_gravity="bottom|right"
                        android:layout_width="56dp"
                        android:layout_height="56dp"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/last_name"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginBottom="4dp"
                        android:id="@+id/first_middle_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/first_position"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/second_position"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/third_position"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/descr"
                android:layout_margin="16dp"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/watch_video"
        android:background="@color/graylight"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_watch_video"
            android:text="@string/watch_video"
            android:textSize="14dp"
            android:textColor="@color/gray"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="8dp"
            android:src="@mipmap/arrow_right"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
    </FrameLayout>
</LinearLayout>