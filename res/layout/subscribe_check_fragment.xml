<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:clickable="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/toolbar_icon"
                android:layout_height="@dimen/toolbar_icon"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/toolbar_icon_padding"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_back"
                android:tint="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lines="1"
                android:ellipsize="end"
                android:paddingLeft="56dp"
                android:paddingRight="56dp"
                android:text="@string/check_data"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"/>
        </FrameLayout>
        <TextView
            android:background="@color/graylight"
            android:text="@string/subscribe"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/gray"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/date_reception"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/date_reception"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/graydark"
                        android:layout_marginBottom="16dp"
                        android:singleLine="true"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="@string/time_reception"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/time_reception"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/graydark"
                        android:layout_marginBottom="16dp"
                        android:singleLine="true"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="@string/lfmname"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lfmname"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/graydark"
                        android:layout_marginBottom="16dp"
                        android:lines="2"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="@string/email"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/email"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/graydark"
                        android:layout_marginBottom="16dp"
                        android:singleLine="true"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="@string/phone"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/phone"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/graydark"
                        android:layout_marginBottom="16dp"
                        android:singleLine="true"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:id="@+id/comment_container"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="@string/comment"
                            android:textAllCaps="true"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/gray"
                            android:layout_marginBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/comment"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/graydark"
                            android:layout_marginBottom="16dp"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/send"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="228dp"
                    android:layout_height="@dimen/container_height_medium"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/accent_round"
                    android:gravity="center"
                    android:text="@string/send"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"/>
                <TextView
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/we_call_confirm_subscribe"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/waiter"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:background="@color/black"
            android:alpha="0.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</FrameLayout>